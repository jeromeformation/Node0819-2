extends layout

block body
  main.container
    h1 Ajout d'une recette

    form(method="post")
      .form-group
        label(for='name') Nom
        input#name.form-control(type='text', placeholder='Nom', name="name").form-group
      .form-group
        label(for='intro') Introduction
        textarea#intro.form-control(rows='3', name="intro")
      .form-group
        label(for='nbIngredients') Nombre d'ingrédients
        input#nbIngredients.form-control(type='number', name="nbIngredients").form-group

      button.btn.btn-primary(type='submit') Créer
